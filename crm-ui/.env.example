# Frontend environment variables for local development
NEXT_PUBLIC_API_BASE_URL=

# NextAuth configuration
NEXTAUTH_URL=
NEXTAUTH_SECRET=

# Email Configuration for Vendor Applications
# Copy this file to .env.local and fill in your email credentials

# Gmail Configuration (recommended)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

RECEIPIENT_EMAIL=

# For custom SMTP:
# Replace the service configuration with:
# host: 'smtp.yourdomain.com'
# port: 587
# secure: false
# auth: { user: 'your-email', pass: 'your-password' }